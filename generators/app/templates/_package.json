{
  "name": "<%= slugify(config.get('presentationTitle'), {lower: true}) %>",
  "version": "<%= config.get('packageVersion') %>",
  "description": "Reveljs starter kit",
  "scripts": {
    "test": "grunt test",
    "start": "grunt serve",
    "build": "grunt build"<% if (config.get('deployToGithubPages')) {%>,
    "deploy": "grunt deploy"
    <% }%>
  },
  "author": {
    "name": "Zahidul Haque",
    "email": "iisowrovii@gmail.com"
  }, <% if (config.get('deployToGithubPages')) { %>
  "repository": {
    "type": "git",
    "url": "git@github.com:<%= config.get('githubUsername')%>/<%= config.get('githubRepository')%>.git"
  }, <% } %>
  "engines": {
    "node": ">=4.0.0",
    "npm": ">=1.3.7"
  },
  "devDependencies": {
    "express": "*",
    "grunt": "*",
    "grunt-autoprefixer": "*", <% if (config.get('deployToGithubPages')) { %>
    "grunt-build-control": "*",<% } %>
    "grunt-cli": "*",
    "grunt-contrib-clean": "*",
    "grunt-contrib-connect": "*",
    "grunt-contrib-copy": "*",
    "grunt-contrib-cssmin": "*",
    "grunt-contrib-jshint": "*",
    "grunt-contrib-uglify": "*",
    "grunt-contrib-watch": "*",
    "grunt-retire": "*",
    "grunt-sass": "*",
    "load-grunt-tasks": "*",
    "mustache": "*",
    "node-sass": "^4.11.0",
    "socket.io": "*"
  },
  "license": "MIT",
  "dependencies": {
    "reveal.js": "*"
  }
}
